<% bracket_container do %>
  <%= form_flash_messages %>
	<%= form_error_messages_for :user %>
	<% steplet(:step => :prompt, :title => "Forgot Password?".t, 
				:description => ["Enter the username or email you have used when signing up with us.".t, "We will then send you an email with instructions on how to reset your password.".t].to_sentences) do %>
		<%= f.text_field :login, :size => User::LOGIN_MAX_CHARACTERS, :maxlength => User::LOGIN_MAX_CHARACTERS, 
		  :label => {:position => :top, :text => [User.human_attribute_name(:login), User.human_attribute_name(:email)].to_sentence_with_or.strip_period,
		    :req => true} %>
		<br/>
	<% end %>
<% end %>
