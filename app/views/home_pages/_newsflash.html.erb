    this.scrollTo(this.currentIndex() < this.elements.size() - 1 ? this.currentIndex() + 1 : 0);
  }
  var nfCarouselInterval = setInterval("nfCarousel.auto()", 15000);
  setTimeout("clearInterval(' + nfCarouselInterval + ')", 120000);
//]]>
</script>
