<%
  list ||= {}
  name ||= :kase
  active ||= nil
%>
<% if false %>
<% form_for :search, @search, :url => search_path, :html => {:method => :post, :name => kv_dom_class(name, :form)} do |f| %>
  <%= table_cells_with_options_tag({:style => "padding-right: 7px;vertical-align:middle;"},
    f.text_field(:query, :label => false, :class => 'singleField', :style => "width:130px;"),
    form_submit_button('search',
      :id => kv_dom_class(name, :button_search),
      :helper => :probono_search_button,
      :name => kv_dom_class(name, :form),
      :onclick => update_page do |page|
        page[kv_dom_class(name, :spinner)].show
        page[kv_dom_class(name, :button_search)].hide
      end
    ) +
    progress_spinner(:id => kv_dom_class(name, :spinner), :tag => :img, :size => '14x14')
  ) %>
  <%= f.hidden_field :order, :id => kv_dom_class(name, :search_order), :value => active %>
  <%= search_order_list(list, active) %>
<% end %>
<% end %>