<%
  tier ||= @tier
  topics ||= @topics || []
%>
<% if tier %>
  <%= render :partial => 'tiers/sidebar_item_content', :object => tier,
      :locals => {:topics => true} %>
  <%= probono_clear_class %>

  <% unless topics.blank? %>
	  <%= sidebar_action_separator unless topics.blank? %>
	  
	  <% ul_tag :class => "listBoxNarrowElements" do %>
    	<% topics.each_with_index do |topic, index| %>

        <% li_tag :id => dom_id(topic, :sidebar),
            :class => "listBoxNarrowElement #{cycle('oddrow', 'evenrow', :name => dom_class(Topic, :sidebar))}" do %>
        
      		<%= render :partial => 'topics/sidebar_item_content', :object => topic,
      		    :locals => {:kases => true} %>
      	  <%= probono_clear_class -%>
      	  
      	<% end %>

    	<% end %>
    <% end %>
  	
  <% end %>

<% end %>


