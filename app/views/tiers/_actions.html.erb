<%= sidebar_action_link_to("Seek advice".t,
  member_path([@tier, @topic, :kase], :new), :icon => :plus) %>

<% if @tier %>
  <%= sidebar_action_link_to("Add a topic".t % {:name => truncate(h(@tier.name), 15), 
      :topic => @tier.topic_t}, member_path([@tier, @tier.topic_class], :new), :icon => :plus) %>
<% end %>

<% if @tier && @tier.is_a?(Organization) %>
  <%= sidebar_action_link_to("Claim Community".t % {:name => truncate(h(@tier.name), 15)},
    tier_claim_url) %>
<% end %>

