<%
  tier ||= sidebar_item_content
  time ||= true unless defined?(time)
  topics ||= false
  kases ||= false
%>
<% div_tag :class => "listBoxPicture" do %>
  <%= link_to(tier_image_tag(tier), tier_root_url(tier)) %>
<% end %>
<% div_tag :class => "listBoxNarrowTextContent" do %>
  <%= div_tag link_to(tier.name, tier_root_url(tier)), :class => 'listBoxHeadlineShort' %>
  <%= div_tag_if_content added_time_ago_display(tier) if time %>
  <%= div_tag_if_content topics_count_supported_in_words(tier) if topics %>
  <%= div_tag_if_content kases_powered_by_people_count_in_words(tier) if kases %>
<% end %>
