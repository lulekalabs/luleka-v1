<%
  topic ||= sidebar_item_content
  time ||= true unless defined?(time)
  kases ||= false unless defined?(kases)
%>
<% div_tag :class => "listBoxPicture" do %>
  <%= link_to(topic_image_tag(topic), member_path([@tier, topic])) %>
<% end %>
<% div_tag :class => "listBoxNarrowTextContent" do %>
  <%= div_tag link_to(topic.name, member_path([@tier, topic])), :class => 'listBoxHeadlineShort' %>
  <%= div_tag_if_content added_time_ago_display(topic) if time %>
  <%= div_tag_if_content kases_powered_by_people_count_in_words(topic) if kases %>
<% end %>
