<% content_left do %>
  <%= render :partial => 'account/bank/transactions/list.html', :object => @transactions,
    :locals => {:title => "Ledger".t} %>
<% end %>
<% content_right do %>
  <% sidebar_actions_container do %>
	  <%= sidebar_action_link_to "Add Credit".t, new_account_bank_deposit_path %>
	  <%= sidebar_action_link_to "Transfer Credit".t, new_account_bank_transfer_path %>
		<%= sidebar_action_separator -%>
	  <%= sidebar_action_link_to_if @person.partner?, "Sales History".t, account_sales_orders_path %>
	  <%= sidebar_action_link_to "Purchase History".t, account_purchase_orders_path %>
		<%= sidebar_action_separator -%>
	  <%= sidebar_action_link_to_if @person.partner?, "Sales Invoices".t, account_sales_invoices_path %>
	  <%= sidebar_action_link_to "Purchase Invoices".t, account_purchase_invoices_path %>
  <% end %>
  <br/>
  <%= render :partial => 'account/bank/sidebar_overview', :object => @bank %>
<% end %>
